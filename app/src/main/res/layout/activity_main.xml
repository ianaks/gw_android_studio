<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/Splash_Background" />
    <LinearLayout
        android:id="@+id/out"
        android:weightSum="60"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:weightSum="100"
            android:gravity="right">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="5" >

                <ImageView
                    android:id="@+id/heart0"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/button_full_heart" />

                <ImageView
                    android:id="@+id/heart1"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/button_full_heart" />

                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/button_full_heart" />

                <ImageView
                    android:id="@+id/heart3"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/button_full_heart" />

                <ImageView
                    android:id="@+id/heart4"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/button_full_heart" />

                <ImageView
                    android:id="@+id/button_plus"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:src="@drawable/button_plus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:weightSum="10"
                android:gravity="right">

                <ImageView
                android:id="@+id/button_sound_on_off"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:src="@drawable/button_sound_off" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100"
            android:gravity="bottom|center">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:weightSum="100"
                    android:gravity="center">

                <ImageView
                    android:id="@+id/button_play"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:src="@drawable/button_play" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/button_exit"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:src="@drawable/button_exit" />
                    <ImageView
                        android:id="@+id/button_records"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:src="@drawable/button_records" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>